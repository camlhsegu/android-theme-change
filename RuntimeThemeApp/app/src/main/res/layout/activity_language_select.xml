<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_app_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LanguageSelectActivity">

    <TextView
        android:id="@+id/tv_select_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_language"
        android:textColor="@color/theme_primary_text_color"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_kor"
                style="@style/button_default_style"
                android:gravity="center"
                android:onClick="onClickHandler"
                android:text="@string/language_korean"
                android:textColor="@color/theme_btn_default_text_state"
                android:textSize="@dimen/info_btn_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_chinese"
                style="@style/button_default_style"
                android:gravity="center"
                android:onClick="onClickHandler"
                android:text="@string/language_chinese"
                android:textColor="@color/theme_btn_default_text_state"
                android:textSize="@dimen/info_btn_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_eng"
                style="@style/button_default_style"
                android:gravity="center"
                android:onClick="onClickHandler"
                android:text="@string/language_english"
                android:textColor="@color/theme_btn_default_text_state"
                android:textSize="@dimen/info_btn_txt_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
