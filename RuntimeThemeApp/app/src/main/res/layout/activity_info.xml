<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_app_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/tv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme_information_activity_title"
        android:textColor="@com.swlee.android.runtimetheme:color/theme_primary_text_color"
        android:textSize="@dimen/hello_txt_size" />

    <Button
        android:id="@+id/btn_info"
        style="@style/button_default_style"
        android:layout_below="@id/tv_info_title"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="onClickHandler"
        android:text="@string/theme_info"
        android:textColor="@com.swlee.android.runtimetheme:color/theme_btn_default_text_state"
        android:textSize="@dimen/info_btn_txt_size" />

</RelativeLayout>
